    {
        type            symmetry;
    }
    inlet
    {
        type            fixedValue;
        value           nonuniform 
0
;
    }
    outlet
    {
        type            inletOutlet;
        inletValue      nonuniform 
0
;
        value           nonuniform 
0
;
    }
    lowerWall
    {
        type            kqRWallFunction;
        value           uniform 0.24;
    }
    wall
    {
        type            kqRWallFunction;
        value           uniform 0.24;
    }
    procBoundary1to0
    {
        type            processor;
        value           uniform 0.24;
    }
    procBoundary1to2
    {
        type            processor;
        value           uniform 0.24;
    }
    procBoundary1to3
    {
